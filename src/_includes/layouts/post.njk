        {# <div class="mt-10" style='position:relative; padding-bottom:calc(61.68% + 44px)'><iframe src='https://gfycat.com/ifr/{{field_gfycatSource}}' frameborder='0' scrolling='no' width='100%' height='100%' style='position:absolute;top:0;left:0;' allowfullscreen></iframe></div> #}
